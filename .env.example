# TMDB Service Environment Configuration
# Copy this file to .env and configure for your environment

# Database Configuration
DATABASE_URI='postgresql://tmdb:pw@tmdb_postgres:5432/tmdb'
POSTGRES_USER=tmdb
POSTGRES_PASSWORD='pw'
POSTGRES_DB=tmdb

# PostgreSQL Extensions
ENABLE_UNACCENT=true

# CRON Schedules (use standard cron syntax, or disable with 'false')
# Full sweep: Download and refresh all data (resource intensive)
CRON_FULL_SWEEP='0 3 13,28 * *'  # 3 AM on 13th and 28th of each month
# Missing IDs: Sync any IDs missing from your database
CRON_MISSING_ONLY='0 6 * * 1'    # 6 AM every Monday
# Prune: Remove records deleted from TMDB
CRON_PRUNE='0 3 19 * *'          # 3 AM on the 19th of each month
# Changes sync: Sync recent changes (should run daily)
CRON_CHANGES_SYNC='0 18 * * *'   # 6 PM daily

# Logging
LOG_TO_CONSOLE=true
LOG_LVL=20  # 10=DEBUG, 20=INFO, 30=WARNING, 40=ERROR, 50=CRITICAL

# TMDB API Configuration
TMDB_READ_ACCESS_TOKEN='your-tmdb-read-access-token'
TMDB_RATE_LIMIT=45           # Requests per second
TMDB_MAX_CONNECTIONS=20      # Concurrent connections
TMDB_BATCH_INSERT=1000       # Batch size for database inserts

# Webhook Notifications (optional - for maubot-webhook)
WEBHOOK_ENABLED=false
WEBHOOK_BOT_USR=maubot
WEBHOOK_BOT_PW=your-webhook-password
WEBHOOK_URL='https://matrix.example.com/_matrix/maubot/plugin/webhook/send'

# HTTP API (optional)
API_ENABLED=false
API_PORT=8000
API_KEY=your-secret-api-key-here
